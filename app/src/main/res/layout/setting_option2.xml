<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto">>
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료한 일"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recycler1"
                android:name="com.android.jh.memo_project.ListFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bbbb"
                app:layoutManager="LinearLayoutManager"
                tools:context="com.android.jh.memo_project.ListFragment"
                tools:listitem="@layout/memo" />


            <LinearLayout
                android:layout_below="@id/recycler1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"></LinearLayout>
        </RelativeLayout>


    </ScrollView>
    <LinearLayout
        android:background="#FFA7A7"
        android:layout_width="match_parent"
        android:layout_height="3dp"></LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중요한 일"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recycler2"
                android:name="com.android.jh.memo_project.ListFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bbbb"
                app:layoutManager="LinearLayoutManager"
                tools:context="com.android.jh.memo_project.ListFragment"
                tools:listitem="@layout/memo" />


            <LinearLayout
                android:layout_below="@id/recycler2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"></LinearLayout>
        </RelativeLayout>


    </ScrollView>


</LinearLayout>
