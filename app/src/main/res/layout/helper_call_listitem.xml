<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hyugnmin.android.runtimepermission.CardView">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textName"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textNumber"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal" />

            <ImageButton
                android:id="@+id/Btnletter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.14"
                android:background="@android:color/holo_orange_dark"
                card_view:srcCompat="@android:drawable/ic_dialog_email" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@android:drawable/stat_sys_phone_call"
                android:id="@+id/BtnCall"
                android:layout_weight="0.14"
                android:layout_gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
